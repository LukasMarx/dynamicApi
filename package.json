{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Bowden Kelly",
    "license": "MIT",
    "scripts": {
        "start": "npm run build &&npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "echo \"Error: no test specified\" && exit 0",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "apicache": "^1.2.1",
        "async": "^2.6.0",
        "bcrypt": "^1.0.3",
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "compression": "^1.7.1",
        "cors": "^2.8.4",
        "dataloader": "^1.4.0",
        "dotenv": "^4.0.0",
        "errorhandler": "^1.5.0",
        "express": "^4.16.2",
        "express-flash": "0.0.2",
        "express-validator": "^4.3.0",
        "formidable": "^1.1.1",
        "google-auth-library": "^1.3.1",
        "graphql": "^0.13.2",
        "graphql-list-fields": "^2.0.0",
        "graphql-tools": "^2.19.0",
        "gridfs-stream": "^1.1.1",
        "lodash": "^4.17.4",
        "lusca": "^1.5.2",
        "mongodb": "^3.0.2",
        "morgan": "^1.9.0",
        "node-cache": "^4.2.0",
        "parse-multipart": "^1.0.4",
        "passport": "^0.4.0",
        "passport-jwt": "^3.0.1",
        "redis": "^2.8.0",
        "redis-streams": "^1.1.0",
        "sharp": "^0.19.0"
    },
    "devDependencies": {
        "@types/async": "^2.0.45",
        "@types/bcrypt": "^1.0.0",
        "@types/bcrypt-nodejs": "0.0.30",
        "@types/body-parser": "^1.16.8",
        "@types/compression": "0.0.33",
        "@types/cors": "^2.8.3",
        "@types/dotenv": "^4.0.2",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.0.35",
        "@types/formidable": "^1.0.30",
        "@types/graphql": "^0.12.3",
        "@types/gridfs-stream": "^0.5.30",
        "@types/jest": "^21.1.8",
        "@types/jquery": "^3.2.17",
        "@types/lodash": "^4.14.91",
        "@types/lusca": "^1.5.0",
        "@types/mongodb": "^3.0.5",
        "@types/morgan": "^1.7.35",
        "@types/node": "^7.0.50",
        "@types/node-cache": "^4.1.1",
        "@types/passport": "^0.4.2",
        "@types/passport-jwt": "^3.0.1",
        "@types/redis": "^2.8.6",
        "@types/request": "^2.0.9",
        "@types/sharp": "^0.17.6",
        "@types/supertest": "^2.0.4",
        "chai": "^4.1.2",
        "concurrently": "^3.5.1",
        "jest": "^21.2.1",
        "nodemon": "^1.13.0",
        "supertest": "^3.0.0",
        "ts-jest": "^21.2.4",
        "ts-node": "^4.0.2",
        "tslint": "^5.8.0",
        "typescript": "^2.6.2"
    }
}
